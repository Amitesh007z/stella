# ─── Network ───────────────────────────────────────
# stellar_testnet | stellar_pubnet
STELLAR_NETWORK=stellar_testnet

# ─── Horizon ───────────────────────────────────────
HORIZON_URL=https://horizon-testnet.stellar.org

# ─── Server ────────────────────────────────────────
HOST=0.0.0.0
PORT=3001

# ─── Database ──────────────────────────────────────
DB_PATH=./data/stella.db

# ─── Logging ───────────────────────────────────────
# debug | info | warn | error
LOG_LEVEL=info

# ─── Route Engine ──────────────────────────────────
MAX_HOPS=4
MAX_ROUTES_PER_DEST=5
MAX_ROUTES_GLOBAL=20
ORDERBOOK_MIN_DEPTH=0.01

# ─── Anchor Crawl ─────────────────────────────────
ANCHOR_CRAWL_INTERVAL_MS=3600000
ANCHOR_CACHE_TTL_MS=1800000
